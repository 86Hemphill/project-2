<header>
    <h1 class="p-4 m-0 text-white text-center">Project 2 Website</h1>
</header>

<main>
    <div class="container my-4 d-flex">

        <div class="col-3">
            <div class="p-3 mb-3 text-white rounded d-flex align-items-center sidebar">
                <i class="fas fa-home"></i>
                <span class="m-0 px-3">|</span>
                <a href="" class="link">Home</a>
            </div>

            <div class="p-3 mb-3 text-white rounded d-flex align-items-center sidebar">
                <i class="fas fa-user"></i>
                <span class="m-0 px-3">|</span>
                <a href="" class="link">Profile</a>
            </div>

            <div class="p-3 mb-3 text-white rounded d-flex align-items-center sidebar">
                <i class="fas fa-cog"></i>
                <span class="m-0 px-3">|</span>
                <a href="" class="link">Settings</a>
            </div>

            <div class="p-3 mb-3 text-white rounded d-flex align-items-center sidebar">
                <i class="fas fa-sign-out-alt"></i>
                <span class="m-0 px-3">|</span>
                <a href="" class="link">Logout</a>
            </div>
        </div>

        <div class="col-6">
            <div>
                <form class="border-0 rounded d-flex" id="search-bar">
                    <input type="text" placeholder="Search" class="px-3 py-2 w-100 text-white border-0" id="search-input">
                    <button type="submit" class="btn text-white border-0" id="search-button">
                        <i class="fas fa-search px-2 py-1" id="search-icon"></i>
                    </button>
                </form>
            </div>

            <div class="card p-4 my-3">
                <header>
                    <div class="d-flex align-items-center">
                        <h4 class="m-0 d-inline">Create New Post</h4>
                        <i class="far fa-edit fa-lg px-3 d-inline"></i>
                    </div>
                    <hr class="border-white">
                </header>

                <form>
                    <label for="post-title">Title:</label>
                    <input type="text" name="post-title" class="p-2 mb-2 w-100 border-0 rounded" id="post-title">

                    <label for="post-body">Body:</label>
                    <textarea name="post-body" cols="30" rows="3" class="p-2 mb-3 w-100 border-0 rounded" id="post-body"></textarea>

                    <button type="submit" class="btn btn-primary float-right" id="submit-post">Submit</button>
                </form>
            </div>

            <div>
                {{#each posts}}
                    {{> posts/new-post}}
                {{/each}}
            </div>
        </div>

        <div class="col-3">
            <div class="p-3 mb-3 text-white rounded d-flex align-items-center justify-content-end sidebar">
                <a href="" class="link">All Users</a>
                <span class="m-0 px-3">|</span>
                <i class="fas fa-users"></i>
            </div>

            <div class="p-3 mb-3 text-white rounded d-flex align-items-center justify-content-end sidebar">
                <a href="" class="link">All Posts</a>
                <span class="m-0 px-3">|</span>
                <i class="fas fa-address-card"></i>
            </div>
        </div>

    </div>
</main>
