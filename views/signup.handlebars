<div class="container">
    <div class="row justify-content-center m-4">
        <div class="card window mx-auto mt-5mx-4 p-5 signup">

            <h2>Create An Account</h2>

            <form class="mb-3 signup">
                <div class="form-group">
                    <label for="email-input">Email address</label>
                    <input type="email" class="border-0 form-control" id="email-input" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="username-input">Username</label>
                    <input type="text" class="border-0 form-control" id="username-input" placeholder="Username">
                </div>

                <div class="form-group">
                    <label for="display-name-input">Display Name</label>
                    <input type="text" class="border-0 form-control" id="display-name-input" placeholder="Display Name">
                </div>

                <div class="form-group">
                    <label for="password-input">Password</label>
                    <input type="password" class="border-0 form-control border-0" id="password-input"
                        placeholder="Password">
                </div>

                <div class="alert alert-danger" id="signup-alert" role="alert">
                    <i class="fas fa-times-circle d-inline"></i>
                    <span id="error-message"></span>
                </div>

                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>

            <p>Or log in <a href="/login">here</a></p>
        </div>
    </div>
    <div class="row justify-content-center my-4">
        <a href="https://www.freepik.com/free-photos-vectors/background" target="_blank" class="center-block signup-bg">Background
            vector
            created by freepik - www.freepik.com</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery.js"></script>
<script language="JavaScript" type="text/javascript" src="./js/signup.js"></script>