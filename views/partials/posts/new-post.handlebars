<div class="card p-4 mb-3 border-0 rounded">
    <div class="d-flex justify-content-between">
        <div class="pb-2 d-flex align-items-center">
            <div class="pr-3">
                <img class="profile-pic rounded-circle" src="https://img.icons8.com/plasticine/2x/cute-pumpkin.png">
            </div>

            <div>
                <h4 class="mb-1"><b>{{displayName}}</b></h4>
                <span class="mb-1 d-inline-block">@<a href="/{{username}}" class="mb-1 link">{{username}}</a></span>
                <p class="m-0">{{createdAt}}</p>
            </div>
        </div>

        <div class="d-flex align-items-start">
            <div class="btn-group dropleft pr-2">
                <button type="button" class="btn p-0 text-white icon" data-toggle="dropdown">
                    <i class="fas fa-external-link-alt"></i>
                </button>
                <div class="dropdown-menu">
                    <button class="dropdown-item share-post" type="button" data-id="{{id}}">Share</button>
                </div>
            </div>

            <div class="btn-group dropleft">
                <button type="button" class="btn p-0 text-white icon" data-toggle="dropdown">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="dropdown-menu">
                    <button class="dropdown-item delete-post" type="button" data-id="{{id}}">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <hr class="mt-2 mb-3 border-white">

    <p class="m-0">{{body}}</p>
</div>